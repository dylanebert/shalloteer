{
  "name": "shalloteer",
  "version": "0.2.5",
  "description": "a vibe coding game engine",
  "type": "module",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./core": {
      "types": "./dist/core/index.d.ts",
      "import": "./dist/index.js"
    },
    "./defaults": {
      "types": "./dist/plugins/defaults.d.ts",
      "import": "./dist/index.js"
    },
    "./animation": {
      "types": "./dist/plugins/animation/index.d.ts",
      "import": "./dist/index.js"
    },
    "./input": {
      "types": "./dist/plugins/input/index.d.ts",
      "import": "./dist/index.js"
    },
    "./lighting": {
      "types": "./dist/plugins/lighting/index.d.ts",
      "import": "./dist/index.js"
    },
    "./orbit-camera": {
      "types": "./dist/plugins/orbit-camera/index.d.ts",
      "import": "./dist/index.js"
    },
    "./physics": {
      "types": "./dist/plugins/physics/index.d.ts",
      "import": "./dist/index.js"
    },
    "./player": {
      "types": "./dist/plugins/player/index.d.ts",
      "import": "./dist/index.js"
    },
    "./rendering": {
      "types": "./dist/plugins/rendering/index.d.ts",
      "import": "./dist/index.js"
    },
    "./transforms": {
      "types": "./dist/plugins/transforms/index.d.ts",
      "import": "./dist/index.js"
    },
    "./respawn": {
      "types": "./dist/plugins/respawn/index.d.ts",
      "import": "./dist/index.js"
    },
    "./tweening": {
      "types": "./dist/plugins/tweening/index.d.ts",
      "import": "./dist/index.js"
    },
    "./recipes": {
      "types": "./dist/plugins/recipes/index.d.ts",
      "import": "./dist/index.js"
    },
    "./vite": {
      "types": "./dist/vite/index.d.ts",
      "import": "./dist/vite/index.js"
    }
  },
  "files": [
    "dist",
    "llms.txt",
    "!dist/reference",
    "!dist/examples"
  ],
  "scripts": {
    "build": "vite build",
    "build:release": "bun scripts/build-llm-docs.ts && vite build && vite build --config vite.config.cdn.ts",
    "dev": "vite build --watch",
    "check": "tsc --noEmit",
    "example": "bun run build && cd example && bun run dev",
    "clean": "rm -rf dist",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "bun test"
  },
  "keywords": [
    "threejs",
    "game-engine",
    "shallot",
    "vibe-coding",
    "ecs",
    "bitecs",
    "game-development",
    "3d",
    "character-controller"
  ],
  "author": "dylanebert",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dylanebert/shalloteer.git"
  },
  "homepage": "https://github.com/dylanebert/shalloteer#readme",
  "bugs": {
    "url": "https://github.com/dylanebert/shalloteer/issues"
  },
  "license": "MIT",
  "peerDependencies": {
    "bitecs": ">=0.3.40",
    "three": ">=0.170.0"
  },
  "devDependencies": {
    "@types/bun": "^1.2.21",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^24.3.0",
    "@types/three": "^0.170.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "bitecs": "^0.3.40",
    "canvas": "^3.2.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "glob": "^11.0.3",
    "jsdom": "^26.1.0",
    "prettier": "^3.6.2",
    "rollup-plugin-visualizer": "^6.0.3",
    "three": "^0.170.0",
    "typescript": "^5.6.0",
    "vite": "^5.4.10",
    "vite-plugin-dts": "^4.5.4"
  },
  "dependencies": {
    "@dimforge/rapier3d-compat": "^0.18.2",
    "gsap": "^3.13.0"
  }
}
